<?xml version='1.0'?>
<!DOCTYPE service_bundle SYSTEM '/usr/share/lib/xml/dtd/service_bundle.dtd.1'>
<service_bundle type='manifest' name='export'>
  <service name='database/<%= @mysql_name %>' type='service' version='0'>
    <create_default_instance enabled='true'/>
    <single_instance/>
    <dependency name='fs' grouping='require_all' restart_on='none' type='service'>
      <service_fmri value='svc:/system/filesystem/local'/>
    </dependency>
    <dependency name='net' grouping='require_all' restart_on='none' type='service'>
      <service_fmri value='svc:/network/loopback'/>
    </dependency>
    <exec_method name='start' type='method' exec='/lib/svc/method/<%= @mysql_name %> start' timeout_seconds='3600'>
      <method_context>
        <method_credential user='<%= @run_user %>' group='<%= @run_group %>' />
      </method_context>
    </exec_method>
    <exec_method name='stop' type='method' exec='/lib/svc/method/<%= @mysql_name %> stop' timeout_seconds='3600'>
      <method_context>
        <method_credential user='<%= @run_user %>' group='<%= @run_group %>' />
      </method_context>
    </exec_method>
    <stability value='Evolving'/>
  </service>
</service_bundle>
